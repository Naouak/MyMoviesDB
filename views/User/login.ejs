<div class="row">
  <div class="col-sm-6">
    <form action="/user/login" method="post">
      <fieldset>
        <legend>Login</legend>
        <div class="form-group row">
          <label for="login_name" class="col-form-label col-xs-3">Name</label>
          <div class="col-xs-9">
            <input type="text" name="name" id="login_name" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <label for="login_password" class="col-form-label col-xs-3">Password</label>
          <div class="col-xs-9">
            <input type="password" name="password" id="login_password" class="form-control">
          </div>
        </div>

        <div class="row">
          <div class="col-xs-9 offset-xs-3">
            <button class="btn btn-primary">Log in</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="col-sm-6">
    <form action="/user/signup" method="post">
      <fieldset>
        <legend>Sign up</legend>
        <div class="form-group row">
          <label for="signup_name" class="col-form-label col-xs-3">Name</label>
          <div class="col-xs-9">
            <input type="text" name="name" id="signup_name" class="form-control">
          </div>
        </div>

        <div class="form-group row">
          <label for="signup_password" class="col-form-label col-xs-3">Password</label>
          <div class="col-xs-9">
            <input type="password" name="password" id="signup_password" class="form-control">
          </div>
        </div>

        <div class="row">
          <div class="col-xs-9 offset-xs-3">
            <button class="btn btn-primary">Sign up</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>


