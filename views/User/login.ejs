<form action="/user/login" method="post">
  <fieldset>
    <legend>Login</legend>
    <div class="form-group row">
      <label for="login_name" class="col-form-label col-xs-2">Nom</label>
      <div class="col-xs-10">
        <input type="text" name="name" id="login_name" class="form-control">
      </div>
    </div>

    <div class="form-group row">
      <label for="login_password" class="col-form-label col-xs-2">Mot de passe</label>
      <div class="col-xs-10">
        <input type="password" name="password" id="login_password" class="form-control">
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 offset-xs-2">
        <button class="btn btn-primary">Se connecter</button>
      </div>
    </div>
  </fieldset>
</form>

<form action="/user/signup" method="post">
  <fieldset>
    <legend>Inscription</legend>
    <div class="form-group row">
      <label for="signup_name" class="col-form-label col-xs-2">Nom</label>
      <div class="col-xs-10">
        <input type="text" name="name" id="signup_name" class="form-control">
      </div>
    </div>

    <div class="form-group row">
      <label for="signup_password" class="col-form-label col-xs-2">Mot de passe</label>
      <div class="col-xs-10">
        <input type="password" name="password" id="signup_password" class="form-control">
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 offset-xs-2">
        <button class="btn btn-primary">S'inscrire</button>
      </div>
    </div>
  </fieldset>
</form>